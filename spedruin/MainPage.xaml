                            HeightRequest="100"/>
<Image Source="obs4.png"
                            x:Name="imgInimigo4"
                            HorizontalOptions="End"
                            VerticalOptions="End"
                             Margin="10,0,0,58"
                            HeightRequest="100"/>
   </Grid>

</ContentPage>
